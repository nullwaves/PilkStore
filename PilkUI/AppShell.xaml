<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PilkUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PilkUI"
    Title="PilkUI">

    
    <FlyoutItem Title="Locations">
        <Tab>
            <ShellContent
                ContentTemplate="{DataTemplate local:LocationsPage}"
                Route="Locations" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Pilk">
        <Tab>
            <ShellContent
            ContentTemplate="{DataTemplate local:PilkListPage}"
            Route="Pilk" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Settings">
        <Tab>
            <ShellContent
                ContentTemplate="{DataTemplate local:SettingsPage}"
                Route="Settings" />
        </Tab>
    </FlyoutItem>

</Shell>
