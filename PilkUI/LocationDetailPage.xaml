<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PilkUI.LocationDetailPage"
             Title="Location Detail">
    <VerticalStackLayout>
        <Label 
            Text="{Binding PLocation.Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="Header"/>
        <Button
            IsVisible="{Binding PLocation.HasParent}"
            Text="{Binding PLocation.Parent}"
            Clicked="ParentButton_Clicked"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding PLocation.Description}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image Source="{Binding PLocation.Image}" MaximumWidthRequest="512"/>
    </VerticalStackLayout>
</ContentPage>